<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PHTActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="23dp"
        android:text="SEE GRAPHS"
        android:onClick="graphs"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="382dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-83dp"
        android:layout_marginBottom="130dp"
        android:text=""
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="382dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-85dp"
        android:layout_marginBottom="72dp"
        android:text=""
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="382dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-85dp"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/editText11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:ems="10"
        android:hint="Weight (kg)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:ems="10"
        android:hint="Heart Rate (Pulse)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:ems="10"
        android:hint="Blood Sugar"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Blood Pressure (Ex:60/80)"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="382dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-85dp"
        android:layout_marginBottom="193dp"
        android:text=""
        android:textSize="14sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="82dp"
        android:text="SAVE RESULTS"
        android:onClick="run"/>
</RelativeLayout>